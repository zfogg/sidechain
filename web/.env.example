# Sidechain Web Frontend Environment Configuration

# API Configuration
VITE_API_URL=http://localhost:8787/api/v1
VITE_WS_URL=ws://localhost:8787/api/v1/ws

# Stream Chat Configuration
VITE_STREAM_API_KEY=your_stream_api_key_here

# OAuth Configuration (Google & Discord)
VITE_GOOGLE_CLIENT_ID=your_google_client_id
VITE_DISCORD_CLIENT_ID=your_discord_client_id

# CDN Configuration (for image optimization)
VITE_CDN_URL=https://cdn.sidechain.app

# Error Tracking (optional - for production)
VITE_ERROR_TRACKING_URL=https://your-error-tracking.com/api/errors

# Analytics (optional)
VITE_ANALYTICS_KEY=your_analytics_key

# Feature Flags (for gradual rollout)
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DIRECT_MESSAGES=true
VITE_ENABLE_REPORTING=true
