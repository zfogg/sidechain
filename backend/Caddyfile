{$DOMAIN:example.com} {
    # Enable HTTPS with Let's Encrypt
    tls {$LETSENCRYPT_EMAIL:admin@example.com}

    # Proxy to backend
    reverse_proxy backend:8787 {
        # Health check
        health /health
        health_timeout 5s
        health_interval 10s
        health_status 200
    }

    # Caddy v2 automatically handles X-Forwarded-* headers for reverse proxying

    # Logging
    log {
        output stdout
        format json
    }

    # Security headers
    header {
        # HSTS - force HTTPS for future requests
        Strict-Transport-Security "max-age=31536000; includeSubDomains"

        # Prevent clickjacking
        X-Frame-Options "DENY"

        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"

        # Enable XSS protection
        X-XSS-Protection "1; mode=block"

        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Rate limiting (optional - adjust based on needs)
    # rate_limit * 100r/s
}
