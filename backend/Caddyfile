{$DOMAIN:example.com} {
    # Enable HTTPS with Let's Encrypt
    tls {$LETSENCRYPT_EMAIL:admin@example.com}

    # Proxy to backend
    reverse_proxy backend:8787 {
        # Health checks for load balancing
        health_uri /health
        health_interval 10s
        health_status 200
        health_passes 1
        health_fails 3

        # WebSocket support - preserve upgrade headers
        header_up Connection "upgrade"
        header_up Upgrade "websocket"

        # Preserve original request info
        header_up X-Forwarded-For {http.request.header.X-Forwarded-For}
        header_up X-Forwarded-Proto {http.request.proto}
        header_up X-Forwarded-Host {http.request.host}
    }

    # Security headers
    header {
        # HSTS - force HTTPS for future requests
        Strict-Transport-Security "max-age=31536000; includeSubDomains"

        # Prevent clickjacking
        X-Frame-Options "DENY"

        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"

        # Enable XSS protection
        X-XSS-Protection "1; mode=block"

        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format json
    }
}

grafana.sidechain.live {
    # Enable HTTPS with Let's Encrypt
    tls {$LETSENCRYPT_EMAIL:admin@example.com}

    # Proxy to Grafana
    reverse_proxy grafana:3000 {
        # Preserve original request info
        header_up X-Forwarded-For {http.request.header.X-Forwarded-For}
        header_up X-Forwarded-Proto {http.request.proto}
        header_up X-Forwarded-Host {http.request.host}
    }

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format json
    }
}

prometheus.sidechain.live {
    # Enable HTTPS with Let's Encrypt
    tls {$LETSENCRYPT_EMAIL:admin@example.com}

    # Proxy to Prometheus
    reverse_proxy prometheus:9090 {
        # Preserve original request info
        header_up X-Forwarded-For {http.request.header.X-Forwarded-For}
        header_up X-Forwarded-Proto {http.request.proto}
        header_up X-Forwarded-Host {http.request.host}
    }

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format json
    }
}
