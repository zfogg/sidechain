{$DOMAIN:example.com} {
    # Enable HTTPS with Let's Encrypt
    tls {$LETSENCRYPT_EMAIL:admin@example.com}

    # Proxy to backend (ALL requests including OPTIONS and WebSocket)
    reverse_proxy backend:8787 {
        # Health checks for load balancing - less aggressive
        health_uri /health
        health_interval 10s
        health_status 200
        health_passes 1
        health_fails 5

        # Connection timeout
        transport http {
            dial_timeout 10s
            response_header_timeout 15s
            keepalive 30s
        }

        # WebSocket support - preserve upgrade headers
        header_up Connection "upgrade"
        header_up Upgrade "websocket"
        header_up X-Forwarded-Proto "https"
        header_up X-Forwarded-Scheme "https"

        # Preserve original request info
        header_up X-Forwarded-For {http.request.header.X-Forwarded-For}
        header_up X-Forwarded-Proto {http.request.proto}
        header_up X-Forwarded-Host {http.request.host}
        header_up X-Real-IP {http.request.header.X-Real-IP}
    }

    # NOTE: CORS headers are handled by backend gin-contrib/cors middleware
    # DO NOT set CORS headers here as it duplicates headers and breaks browser CORS validation
    # Backend is configured to allow: https://www.sidechain.live

    # Security headers
    header {
        # HSTS - force HTTPS for future requests
        Strict-Transport-Security "max-age=31536000; includeSubDomains"

        # Prevent clickjacking
        X-Frame-Options "DENY"

        # Prevent MIME type sniffing
        X-Content-Type-Options "nosniff"

        # Enable XSS protection
        X-XSS-Protection "1; mode=block"

        # Referrer policy
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format json
    }
}

grafana.sidechain.live {
    # Enable HTTPS with Let's Encrypt
    tls {$LETSENCRYPT_EMAIL:admin@example.com}

    # Proxy to Grafana with health checks and retry
    reverse_proxy grafana:3000 {
        # Health check configuration - less aggressive
        health_uri /api/health
        health_interval 10s
        health_status 200
        health_passes 1
        health_fails 5

        # Connection timeout and keepalive
        transport http {
            dial_timeout 10s
            response_header_timeout 15s
            expect_continue_timeout 2s
        }

        # Grafana expects this header for HTTPS requests
        header_up X-Forwarded-Port "443"
    }

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Frame-Options "SAMEORIGIN"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format json
    }
}

prometheus.sidechain.live {
    # Enable HTTPS with Let's Encrypt
    tls {$LETSENCRYPT_EMAIL:admin@example.com}

    # Basic authentication for Prometheus
    # Username: prometheus
    # Password: PrometheusSecure2025
    basicauth /* {
        prometheus $2a$14$8acSdF6QjVz2wcN5Q2BI7.VJwfFXrzbb22HPdoHKQzcOyyLRzs7Li
    }

    # Proxy to Prometheus with health checks and retry
    reverse_proxy prometheus:9090 {
        # Health check configuration - less aggressive
        health_uri /-/healthy
        health_interval 10s
        health_status 200
        health_passes 1
        health_fails 5

        # Connection timeout and keepalive
        transport http {
            dial_timeout 10s
            response_header_timeout 15s
            expect_continue_timeout 2s
        }

        # Prometheus expects these headers for HTTPS requests
        header_up X-Forwarded-Port "443"
    }

    # Security headers
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains"
        X-Frame-Options "DENY"
        X-Content-Type-Options "nosniff"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    # Logging
    log {
        output stdout
        format json
    }
}
