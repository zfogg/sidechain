# Development Dockerfile with hot reload support
# This image is used for development with air (live reload)
# Use with docker-compose.dev.yml for automatic rebuilds on code changes

FROM golang:1.24-alpine

RUN apk add --no-cache git ca-certificates tzdata ffmpeg

WORKDIR /app

# Install air for hot reload
RUN go install github.com/air-verse/air@latest

# Copy only go.mod and go.sum for dependency caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Create tmp directory for air output
RUN mkdir -p tmp

# Run air with hot reload
CMD ["air", "-c", ".air.toml"]
