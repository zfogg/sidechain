# Production Environment Configuration
# Copy to .env.prod and fill in real values

# ============================================
# Grafana Configuration
# ============================================
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=CHANGE_IN_PRODUCTION
GF_SERVER_ROOT_URL=https://grafana.sidechain.live/

# SMTP Configuration (for alert notifications)
GF_SMTP_ENABLED=false
GF_SMTP_HOST=smtp.example.com
GF_SMTP_PORT=587
GF_SMTP_USER=alerts@sidechain.live
GF_SMTP_PASSWORD=
GF_SMTP_FROM_ADDRESS=alerts@sidechain.live

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgres://sidechain:PASSWORD_HERE@postgres:5432/sidechain_prod?sslmode=require

# ============================================
# Redis Configuration
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================
# Server Configuration
# ============================================
ENVIRONMENT=production
PORT=8787
HOST=0.0.0.0
LOG_LEVEL=info
LOG_FILE=/var/log/sidechain/server.log

# ============================================
# Security
# ============================================
JWT_SECRET=GENERATE_SECURE_JWT_SECRET_HERE
CORS_ORIGINS=https://sidechain.live,https://www.sidechain.live

# ============================================
# Stream.io Configuration
# ============================================
STREAM_API_KEY=
STREAM_API_SECRET=

# ============================================
# Gorse Configuration
# ============================================
GORSE_URL=http://gorse:8088
GORSE_API_KEY=sidechain_gorse_api_key

# ============================================
# AWS/S3 Configuration
# ============================================
STORAGE_PROVIDER=s3
AWS_REGION=us-west-2
AWS_BUCKET=sidechain-prod-media
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
CDN_BASE_URL=https://cdn.sidechain.live

# ============================================
# OAuth Configuration
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
OAUTH_REDIRECT_URL=https://sidechain.live/auth/callback

# ============================================
# Email Configuration (AWS SES)
# ============================================
SES_FROM_EMAIL=noreply@sidechain.live
SES_FROM_NAME=Sidechain
BASE_URL=https://sidechain.live
