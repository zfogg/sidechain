{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 22,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build with symbols and no optimization",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "SIDECHAIN_BUILD_TESTS": "ON",
                "SIDECHAIN_BUILD_PLUGIN_HOST": "ON",
                "SIDECHAIN_INSTALL_STANDALONE": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Optimized release build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "SIDECHAIN_BUILD_TESTS": "OFF",
                "SIDECHAIN_BUILD_PLUGIN_HOST": "OFF",
                "SIDECHAIN_INSTALL_STANDALONE": "OFF"
            }
        },
        {
            "name": "relwithdebinfo",
            "displayName": "Release with Debug Info",
            "description": "Optimized build with debug symbols for profiling",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "SIDECHAIN_BUILD_TESTS": "OFF",
                "SIDECHAIN_BUILD_PLUGIN_HOST": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug",
            "displayName": "Debug Build",
            "configurePreset": "debug"
        },
        {
            "name": "release",
            "displayName": "Release Build",
            "configurePreset": "release"
        },
        {
            "name": "relwithdebinfo",
            "displayName": "RelWithDebInfo Build",
            "configurePreset": "relwithdebinfo"
        }
    ],
    "testPresets": [
        {
            "name": "debug",
            "displayName": "Debug Tests",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        }
    ]
}
